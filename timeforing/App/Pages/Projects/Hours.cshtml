@page
@model HoursModel
@{
    ViewData["Title"] = "Project Overview";
}

<div>
    <form method="post" class="table-fit text-center">
        <div class="form-group">
        <label asp-for="DriverId"></label>
        </div>
        <div class="form-group">
        <input asp-for="DriverId">
        </div>
        <div class="form-group">
        <label asp-for="NumberOfHours"></label>
        </div>
        <div class="form-group">
        <input asp-for="NumberOfHours" type="number" min="1" max="20" step="0.5" >
        </div>
        <input type="submit" value="Add Hours" class = "btn btn-primary table-fit" />
    </form>
    <table class="table-fit-small">
        <thead>
					<tr>

                        <th scope="col" class="text-left">Driver</th>
						<th scope="col"class="text-left extrapadding-right">Hours</th>
						<th scope="col" class="text-right" style="white-space: nowrap;">Date Entered</th>

                    </tr>
        </thead>
 @foreach(var hour in Model.Project.Hours){
        <tr>
            <td class="text-left extrapadding-right">@hour.DriverId</td>
            <td class="text-left extrapadding-right">@hour.Hours</td>
            <td class="text-right">@hour.Date.LocalDateTime</td>
        </tr>
    }
    </table>
 
</div>
