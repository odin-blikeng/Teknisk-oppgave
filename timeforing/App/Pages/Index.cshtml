@page
@model IndexModel
@{
    ViewData["Title"] = "Projects Overview";
}
<form method="post">
<div class="text-center">
    <table class = "table-fit">
        <thead>
					<tr>

                        <th scope="col" style="padding-bottom: 0.3em">Projects</th>
						<th scope="col"></th>
					</tr>
        </thead>
 @foreach(var project in Model.Projects)
 {
     <tr>
        <td>
                @Html.DisplayFor(modelItem => project.Title)
        </td>
            <td>
                <button type="submit" class="btn btn-primary table-fit" asp-page-handler="GoToProject"
                                asp-route-id="@project.Id.ToString()">
                                <i class="bi bi-book"></i>
                </button>            
            </td>        
     </tr>
 }
 </table>
</div>
</form>

